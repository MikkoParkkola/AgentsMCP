{
  "root": true,
  "env": {
    "es2021": true,
    "node": true
  },
  "extends": ["eslint:recommended"],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "overrides": [
    {
      "files": ["**/*.js", "**/*.cjs", "**/*.mjs", "**/*.ts"],
      "rules": {}
    }
  ],
  "ignorePatterns": ["**/*.py", "**/*.toml", "**/*.md", "**/*.txt", "src/**/*.py", "tests/**/*.py"]
}
